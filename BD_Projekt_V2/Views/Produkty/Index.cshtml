@model IEnumerable<BD_Projekt_V2.Produkty>

@{
    ViewBag.Title = "Lista produktów";
}

<h2>Produkty</h2>

<p>
    @Html.ActionLink("Dodaj nowy", "Create")
</p>

@using (Html.BeginForm())
{
    @Html.TextBox("Name");
    <input type="submit" value="Szukaj">

}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dostawcy.NazwaFirmy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategoria.NazwaKategorii)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NazwaProduktu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IloscNaJednostke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CenaJednostkowa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LiczbaProduktow)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dostawcy.NazwaFirmy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategoria.NazwaKategorii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NazwaProduktu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IloscNaJednostke)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CenaJednostkowa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LiczbaProduktow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.ActionLink("Edycja", "Edit", new { id = item.ProduktId }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.ProduktId }) |
                @Html.ActionLink("Usuwanie", "Delete", new { id = item.ProduktId })
            </td>
        </tr>
    }

</table>
